<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:padding="20dp"
       android:background="#333333">

       <ImageView
           android:id="@+id/profile1"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_centerVertical="true"
           android:src="@drawable/marianne" />

       <TextView
           android:id="@+id/fullname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/profile1"
           android:fontFamily="@font/bungee"
           android:includeFontPadding="false"
           android:text="@string/marianne_malayo"
           android:textColor="@color/white"
           android:textSize="22sp"
           tools:ignore="MissingPrefix" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/fullname"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/profile1"
           android:includeFontPadding="false"
           android:text="mariannemalayo@gmail.com"
           android:textColor="#ff9900"
           android:textSize="14sp" />

   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#999999">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="10dp"
                android:text="Marianne Malayo"
                android:background="#999999"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/acme">


            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/age"
                android:drawablePadding="10dp"
                android:text="20"
                android:background="#999999"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/acme">


            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birthdate"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/birth"
                android:drawablePadding="10dp"
                android:text="September 17, 2001"
                android:background="#999999"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/acme">


            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#999999"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="10dp"
                android:fontFamily="@font/acme"
                android:text="09091895619"
                android:textColor="@color/white"
                android:textSize="20dp">


            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/add"
                android:drawablePadding="10dp"
                android:text="Purok 5, Pamorangon, Daet, Camarines Morte"
                android:background="#999999"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/acme">


            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#999999"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="100dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonProfile1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:backgroundTint="#ff9900"
            android:drawableLeft="?attr/actionModeCloseDrawable"
            android:fontFamily="@font/bungee"
            android:text="Back"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="25dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</LinearLayout>
</ScrollView>